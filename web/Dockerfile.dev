FROM node:20-alpine

WORKDIR /app

# Copy package files first so this layer is cached between rebuilds
COPY package*.json ./
RUN npm install

# Source is mounted as a volume at runtime â€” no COPY needed here
EXPOSE 5173

# --host exposes the dev server on 0.0.0.0 so Docker can forward the port
CMD ["npm", "run", "dev", "--", "--host"]
